<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context="com.niejingwei.filemanager.CreateNewFileActivity">
    <LinearLayout
        android:background="#fff"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="输入新文件的名称"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_newfilename_createnewfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#20000000"
            android:selectAllOnFocus="true"
            android:text="新建文件夹" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2.5">

            <Button
                android:id="@+id/btn_cancel_createnewfile"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#fff"
                android:text="取消" />

            <Button
                android:id="@+id/btn_ensure_createnewfile"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="#fff"
                android:text="确定" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
